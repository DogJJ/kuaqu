<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/all_one_banner"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:AutoPlayTime="3000"
        app:pointNormal="@drawable/dot_normal"
        app:pointSelect="@drawable/dot_select"
        app:pointsContainerBackground="#15aaaaaa"
        app:pointsPosition="CENTER" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        android:background="#EEEEEE"

        />
    <LinearLayout
        android:id="@+id/all_one_huodonglinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/all_world_flexbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap"></com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        android:background="#EEEEEE"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        android:background="#EEEEEE"

        />
</LinearLayout>