<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <fragment
        android:id="@+id/fragment_all_world"
        android:name="com.wangqu.kuaqu.fragment.Fragment_all_world"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragment_kind"
        android:name="com.wangqu.kuaqu.fragment.Fragment_kind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragment_shop"
        android:name="com.wangqu.kuaqu.fragment.Fragment_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragment_cart"
        android:name="com.wangqu.kuaqu.fragment.Fragment_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/fragment_mine"
        android:name="com.wangqu.kuaqu.fragment.Fragment_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_all_world"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/all_world"
            android:gravity="center"
            android:paddingBottom="7.4dp"
            android:paddingTop="7.4dp"
            android:text="全球"
            android:textSize="10.5dp" />

        <TextView
            android:id="@+id/main_kind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/kind"
            android:gravity="center"
            android:paddingBottom="7.4dp"
            android:paddingTop="7.4dp"
            android:text="分类"
            android:textSize="10.5dp" />

        <TextView
            android:id="@+id/main_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/shop"
            android:gravity="center"
            android:paddingBottom="7.4dp"
            android:paddingTop="7.4dp"
            android:text="门店"
            android:textSize="10.5dp" />

        <TextView
            android:id="@+id/main_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/cart"
            android:gravity="center"
            android:paddingBottom="7.4dp"
            android:paddingTop="7.4dp"
            android:text="购物车"
            android:textSize="10.5dp" />

        <TextView
            android:id="@+id/main_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/mine"
            android:gravity="center"
            android:paddingBottom="7.4dp"
            android:paddingTop="7.4dp"
            android:text="我"
            android:textSize="10.5dp" />


    </LinearLayout>


</LinearLayout>
